-
    const defaultTitleProps = {
        tag: 'h2', 
        text: 'Title',
        classes: ''
    }

mixin title(props = defaultTitleProps)
    -
        const checkProps = {
            tag: props.tag ? props.tag : defaultTitleProps.tag, 
            text: props.text ? props.text : defaultTitleProps.text,
            classes: props.classes ? props.classes : defaultTitleProps.classes
        }

    case checkProps.tag
        when 'h1'
            h1.title.title--h1(class=checkProps.classes)= checkProps.text
        when 'h2'
            h2.title.title--h2(class=checkProps.classes)= checkProps.text
        when 'h3'
            h3.title.title--h3(class=checkProps.classes)= checkProps.text
        when 'h4'
            h4.title.title--h4(class=checkProps.classes)= checkProps.text
        when 'h5'
            h5.title.title--h5(class=checkProps.classes)= checkProps.text
        when 'h6'
            h6.title.title--h6(class=checkProps.classes)= checkProps.text
        default
            span Title not found
